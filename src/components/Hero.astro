---
import { ArrowRight, Code, Zap, Users } from 'lucide-react';
---

<section class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-primary-900 via-primary-800 to-slate-900 overflow-hidden">
  <!-- Enhanced 3D Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary-900 via-purple-900 to-slate-900"></div>
  <div 
    class="absolute inset-0 opacity-50 
    bg-[url('data:image/svg+xml,%3Csvg%20width%3D%2260%22%20height%3D%2260%22%20viewBox%3D%220%200%2060%2060%22%20xmlns%3D%22http://www.w3.org/2000/svg%22%3E%3Cg%20fill%3D%22none%22%20fill-rule%3D%22evenodd%22%3E%3Cg%20fill%3D%22%23ffffff%22%20fill-opacity%3D%220.05%22%3E%3Ccircle%20cx%3D%2230%22%20cy%3D%2230%22%20r%3D%221%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')]">
  </div>
  
  <!-- Floating Elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-20 left-10 w-32 h-32 bg-gradient-to-br from-secondary-400/30 to-accent-400/30 rounded-3xl animate-float rotate-12 backdrop-blur-sm shadow-2xl shadow-secondary-500/20" style="animation-duration: 8s;"></div>
    <div class="absolute top-40 right-20 w-24 h-24 bg-gradient-to-br from-purple-400/30 to-pink-400/30 rounded-full animate-bounce-slow -rotate-12 backdrop-blur-sm shadow-2xl shadow-purple-500/20"></div>
    <div class="absolute bottom-40 left-20 w-40 h-40 bg-gradient-to-br from-accent-400/25 to-yellow-400/25 rounded-3xl animate-pulse-slow rotate-45 backdrop-blur-sm shadow-2xl shadow-accent-500/20" style="animation-duration: 6s;"></div>
    <div class="absolute bottom-20 right-10 w-20 h-20 bg-gradient-to-br from-green-400/30 to-secondary-400/30 rounded-2xl animate-float -rotate-6 backdrop-blur-sm shadow-2xl shadow-green-500/20" style="animation-delay: 2s; animation-duration: 10s;"></div>
  </div>
  
  <!-- Content -->
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-32 text-center">
    <div class="animate-fade-up">
      <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight">
        Innovative 
        <span class="bg-gradient-to-r from-secondary-400 to-accent-400 bg-clip-text text-transparent">
          Technology
        </span>
        <br />Solutions
      </h1>
      
      <p class="text-xl md:text-2xl text-slate-300 mb-8 max-w-3xl mx-auto leading-relaxed">
        Transforming ideas into powerful digital experiences. We build cutting-edge software solutions 
        that drive business growth and innovation.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-16">
        <a 
          href="/projects" 
          class="inline-flex items-center px-8 py-4 bg-secondary-500 hover:bg-secondary-600 text-white rounded-xl font-semibold transition-all duration-200 hover:scale-105 hover:shadow-xl"
        >
          View Our Work
          <ArrowRight className="ml-2 h-5 w-5" />
        </a>
        <a 
          href="/contact" 
          class="inline-flex items-center px-8 py-4 bg-white/10 hover:bg-white/20 text-white border border-white/20 rounded-xl font-semibold backdrop-blur-sm transition-all duration-200 hover:scale-105"
        >
          Get In Touch
        </a>
      </div>
      
      <!-- Stats -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto perspective-1000">
        <div class="stat-card group">
          <Code className="h-12 w-12 text-secondary-400 mb-4" />
          <div class="text-3xl font-bold text-white mb-2">50+</div>
          <div class="text-slate-300">Projects Delivered</div>
        </div>
        <div class="stat-card group delay-100">
          <Users className="h-12 w-12 text-accent-400 mb-4" />
          <div class="text-3xl font-bold text-white mb-2">100+</div>
          <div class="text-slate-300">Happy Clients</div>
        </div>
        <div class="stat-card group delay-200">
          <Zap className="h-12 w-12 text-primary-400 mb-4" />
          <div class="text-3xl font-bold text-white mb-2">5+</div>
          <div class="text-slate-300">Years Experience</div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <!-- <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <div class="w-6 h-10 border-2 border-white/30 rounded-full flex justify-center">
      <div class="w-1 h-3 bg-white/50 rounded-full mt-2 animate-pulse"></div>
    </div>
  </div> -->
</section>

<style>
/* Perspective for 3D hover */
.perspective-1000 {
  perspective: 1000px;
}

.stat-card {
  @apply relative flex flex-col items-center p-6 bg-white/10 backdrop-blur-sm rounded-2xl border border-white/10 transition-all duration-500;
}
.stat-card:hover {
  transform: scale(1.05) rotateY(12deg);
  box-shadow: 0 20px 40px rgba(0,0,0,0.25);
}
.stat-card::after {
  content: "";
  position: absolute;
  inset: 0;
  border-radius: 1rem;
  background: linear-gradient(to bottom right, rgba(255,255,255,0.05), transparent);
  opacity: 0;
  transition: opacity 0.5s;
}
.stat-card:hover::after {
  opacity: 1;
}

.delay-100 { transition-delay: 0.1s; }
.delay-200 { transition-delay: 0.2s; }

/* Floating Animations */
@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-15px); }
}
.animate-float { animation: float 6s ease-in-out infinite; }

@keyframes bounce-slow {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-30px); }
}
.animate-bounce-slow { animation: bounce-slow 4s infinite; }

@keyframes pulse-slow {
  0%, 100% { opacity: 0.6; transform: scale(1); }
  50% { opacity: 1; transform: scale(1.1); }
}
.animate-pulse-slow { animation: pulse-slow 5s infinite; }
</style>
