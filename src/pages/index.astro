---
import Layout from '../components/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import FeaturedProjects from '../components/FeaturedProjects.astro';
import Footer from '../components/Footer.astro';
import { Shield, Rocket, Users, Zap } from 'lucide-react';
---

<Layout title="KruxxTech - Technology Solutions & Software Development">
  <Header />
  <main>
    <Hero />
    
    <!-- Services Section -->
    <section class="py-20 bg-gradient-to-br from-slate-50 via-blue-50 to-purple-50 relative overflow-hidden">
      <!-- 3D Background Elements -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-10 left-10 w-64 h-64 bg-gradient-to-br from-primary-200/20 to-secondary-200/20 rounded-full blur-3xl animate-pulse-slow"></div>
        <div class="absolute bottom-10 right-10 w-80 h-80 bg-gradient-to-br from-accent-200/15 to-pink-200/15 rounded-full blur-3xl animate-float" style="animation-duration: 15s;"></div>
        <div class="absolute top-1/2 left-1/2 w-96 h-96 bg-gradient-to-br from-purple-200/10 to-cyan-200/10 rounded-full blur-3xl animate-bounce-slow transform -translate-x-1/2 -translate-y-1/2" style="animation-duration: 20s;"></div>
        
        <!-- Floating 3D Shapes -->
        <div class="absolute top-20 right-1/4 w-16 h-16 bg-gradient-to-br from-yellow-300/30 to-orange-300/30 rounded-2xl animate-float transform rotate-45 shadow-xl shadow-yellow-500/20" style="animation-delay: 2s; animation-duration: 8s;"></div>
        <div class="absolute bottom-32 left-1/4 w-12 h-12 bg-gradient-to-br from-green-300/35 to-teal-300/35 rounded-full animate-bounce-slow shadow-lg shadow-green-500/20" style="animation-delay: 4s;"></div>
        <div class="absolute top-1/3 right-1/3 w-20 h-20 bg-gradient-to-br from-purple-300/25 to-pink-300/25 rounded-3xl animate-pulse-slow transform -rotate-12 shadow-xl shadow-purple-500/15" style="animation-delay: 6s;"></div>
      </div>
      
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16 animate-on-scroll">
          <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">
            Our Expertise
          </h2>
          <p class="text-xl text-slate-600 max-w-3xl mx-auto">
            We specialize in creating comprehensive technology solutions that drive business success.
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="text-center p-6 bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-4 hover:rotate-y-6 animate-on-scroll group perspective-1000 transform-gpu">
            <div class="w-16 h-16 bg-primary-100 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 group-hover:rotate-12 transition-all duration-300">
              <Shield className="h-8 w-8 text-primary-600" />
            </div>
            <h3 class="text-xl font-semibold text-slate-900 mb-3">Enterprise Solutions</h3>
            <p class="text-slate-600">Scalable ERP systems and business platforms built for growth.</p>
            <div class="absolute inset-0 bg-gradient-to-br from-primary-500/5 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          </div>
          
          <div class="text-center p-6 bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-4 hover:rotate-y-6 animate-on-scroll group perspective-1000 transform-gpu" style="transition-delay: 0.1s;">
            <div class="w-16 h-16 bg-secondary-100 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 group-hover:rotate-12 transition-all duration-300">
              <Rocket className="h-8 w-8 text-secondary-600" />
            </div>
            <h3 class="text-xl font-semibold text-slate-900 mb-3">Platform Development</h3>
            <p class="text-slate-600">Custom platforms that connect users and streamline operations.</p>
            <div class="absolute inset-0 bg-gradient-to-br from-secondary-500/5 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          </div>
          
          <div class="text-center p-6 bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-4 hover:rotate-y-6 animate-on-scroll group perspective-1000 transform-gpu" style="transition-delay: 0.2s;">
            <div class="w-16 h-16 bg-accent-100 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 group-hover:rotate-12 transition-all duration-300">
              <Users className="h-8 w-8 text-accent-600" />
            </div>
            <h3 class="text-xl font-semibold text-slate-900 mb-3">Collaboration Tools</h3>
            <p class="text-slate-600">Real-time communication and project management solutions.</p>
            <div class="absolute inset-0 bg-gradient-to-br from-accent-500/5 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          </div>
          
          <div class="text-center p-6 bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-4 hover:rotate-y-6 animate-on-scroll group perspective-1000 transform-gpu" style="transition-delay: 0.3s;">
            <div class="w-16 h-16 bg-green-100 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 group-hover:rotate-12 transition-all duration-300">
              <Zap className="h-8 w-8 text-green-600" />
            </div>
            <h3 class="text-xl font-semibold text-slate-900 mb-3">Productivity Apps</h3>
            <p class="text-slate-600">Intuitive applications that boost efficiency and organization.</p>
            <div class="absolute inset-0 bg-gradient-to-br from-green-500/5 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          </div>
        </div>
      </div>
    </section>
    
    <FeaturedProjects />
    
    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-br from-primary-600 via-purple-600 to-secondary-600 relative overflow-hidden">
      <!-- 3D Background Elements -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-0 left-0 w-72 h-72 bg-gradient-to-br from-white/10 to-cyan-300/20 rounded-full blur-3xl animate-float" style="animation-duration: 12s;"></div>
        <div class="absolute bottom-0 right-0 w-96 h-96 bg-gradient-to-br from-accent-300/15 to-pink-300/15 rounded-full blur-3xl animate-pulse-slow" style="animation-duration: 18s;"></div>
        
        <!-- Floating Elements -->
        <div class="absolute top-1/4 left-1/4 w-24 h-24 bg-gradient-to-br from-white/20 to-cyan-200/30 rounded-2xl animate-float transform rotate-12 shadow-2xl shadow-cyan-500/30" style="animation-delay: 1s; animation-duration: 10s;"></div>
        <div class="absolute bottom-1/4 right-1/4 w-16 h-16 bg-gradient-to-br from-yellow-200/25 to-orange-200/25 rounded-full animate-bounce-slow shadow-xl shadow-orange-500/25" style="animation-delay: 3s;"></div>
        <div class="absolute top-1/2 right-1/3 w-8 h-8 bg-gradient-to-br from-pink-200/40 to-purple-200/40 rounded-lg animate-pulse-slow transform rotate-45 shadow-lg shadow-pink-500/30" style="animation-delay: 5s;"></div>
      </div>
      
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="animate-on-scroll">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
            Ready to Transform Your Business?
          </h2>
          <p class="text-xl text-white/90 mb-8 max-w-3xl mx-auto">
            Let's discuss how our technology solutions can drive your business forward and create lasting value.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href="/contact" 
              class="inline-flex items-center px-8 py-4 bg-white text-primary-600 rounded-xl font-semibold hover:bg-slate-100 transition-all duration-200 hover:scale-105 hover:shadow-xl"
            >
              Start Your Project
            </a>
            <a 
              href="/projects" 
              class="inline-flex items-center px-8 py-4 bg-white/10 text-white border border-white/20 rounded-xl font-semibold backdrop-blur-sm hover:bg-white/20 transition-all duration-200 hover:scale-105"
            >
              View Our Work
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>