        <!-- Floating Elements -->
        <div class="absolute top-1/4 right-1/3 w-18 h-18 bg-gradient-to-br from-yellow-300/30 to-amber-300/30 rounded-2xl animate-float transform rotate-45 shadow-xl shadow-yellow-500/20" style="animation-delay: 1s; animation-duration: 11s;"></div>
