---
import Layout from '../components/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Target, Eye, Heart, Lightbulb, Users, Award } from 'lucide-react';
---

<Layout 
  title="About Us - KruxxTech" 
  description="Learn about KruxxTech's mission, vision, and the team behind innovative technology solutions."
>
  <Header />
  <main class="pt-20">
    <!-- Hero Section -->
    <section class="py-20 bg-gradient-to-br from-primary-50 via-purple-50 to-secondary-50 relative overflow-hidden">
      <!-- 3D Background Elements -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-10 right-10 w-80 h-80 bg-gradient-to-br from-primary-200/15 to-purple-200/15 rounded-full blur-3xl animate-pulse-slow" style="animation-duration: 16s;"></div>
        <div class="absolute bottom-10 left-10 w-64 h-64 bg-gradient-to-br from-secondary-200/20 to-cyan-200/20 rounded-full blur-3xl animate-float" style="animation-duration: 14s;"></div>
        
        <!-- Floating 3D Shapes -->
        <div class="absolute top-1/4 left-1/3 w-20 h-20 bg-gradient-to-br from-accent-300/25 to-yellow-300/25 rounded-3xl animate-float transform rotate-30 shadow-xl shadow-accent-500/20" style="animation-delay: 2s; animation-duration: 9s;"></div>
        <div class="absolute bottom-1/3 right-1/4 w-14 h-14 bg-gradient-to-br from-green-300/30 to-teal-300/30 rounded-2xl animate-bounce-slow transform -rotate-15 shadow-lg shadow-green-500/20" style="animation-delay: 4s;"></div>
        <div class="absolute top-2/3 left-1/4 w-10 h-10 bg-gradient-to-br from-pink-300/35 to-rose-300/35 rounded-full animate-pulse-slow shadow-lg shadow-pink-500/25" style="animation-delay: 6s;"></div>
      </div>
      
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16 animate-on-scroll">
          <h1 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6">
            About KruxxTech
          </h1>
          <p class="text-xl text-slate-600 max-w-3xl mx-auto">
            We're passionate about creating technology solutions that make a real difference. 
            Our journey began with a simple belief: great software can transform businesses and lives.
          </p>
        </div>
      </div>
    </section>
    
    <!-- Mission & Vision -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div class="animate-on-scroll">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center mr-4">
                <Target className="h-6 w-6 text-primary-600" />
              </div>
              <h2 class="text-3xl font-bold text-slate-900">Our Mission</h2>
            </div>
            <p class="text-lg text-slate-600 leading-relaxed">
              To deliver innovative, scalable, and user-centric technology solutions that empower 
              businesses to achieve their goals. We believe in creating software that not only meets 
              current needs but anticipates future challenges.
            </p>
          </div>
          
          <div class="animate-on-scroll">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 bg-secondary-100 rounded-xl flex items-center justify-center mr-4">
                <Eye className="h-6 w-6 text-secondary-600" />
              </div>
              <h2 class="text-3xl font-bold text-slate-900">Our Vision</h2>
            </div>
            <p class="text-lg text-slate-600 leading-relaxed">
              To be the leading technology partner for businesses seeking digital transformation. 
              We envision a future where technology seamlessly integrates with human creativity 
              to solve complex problems and create extraordinary experiences.
            </p>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Values -->
    <section class="py-20 bg-gradient-to-br from-slate-50 via-indigo-50 to-purple-50 relative overflow-hidden">
