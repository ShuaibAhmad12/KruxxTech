---
import Layout from '../components/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ExternalLink, Github, ArrowRight, Filter } from 'lucide-react';

// Mock project data - in a real app, this would come from Sanity
const projects = [
  {
    id: 1,
    title: "Combat Domain",
    description: "Comprehensive martial arts platform connecting fighters, promoters, and gym owners. Features advanced fighter profiles, achievement tracking, gym listings, and event management capabilities.",
    type: "Platform",
    category: "Social Platform",
    technologies: ["React", "Node.js", "MongoDB", "Socket.io", "Express", "Redux"],
    features: ["Fighter Profiles", "Achievement System", "Gym Directory", "Event Management", "Real-time Chat"],
    targetAudience: "Fighters, promoters, and gym owners",
    image: "https://images.pexels.com/photos/863988/pexels-photo-863988.jpeg?auto=compress&cs=tinysrgb&w=800",
    status: "Live"
  },
  {
    id: 2,
    title: "Alpine ERP System",
    description: "Complete educational ERP solution designed for college and university management. Streamlines administrative processes, student services, and academic operations.",
    type: "ERP System",
    category: "Enterprise Software",
    technologies: ["Vue.js", "Laravel", "PostgreSQL", "Redis", "Docker", "AWS"],
    features: ["Student Management", "Course Administration", "Grade Tracking", "Financial Management", "Reporting Dashboard"],
    targetAudience: "Educational institutions, students, and administrative staff",
    image: "https://images.pexels.com/photos/159711/books-bookstore-book-reading-159711.jpeg?auto=compress&cs=tinysrgb&w=800",
    status: "Live"
  },
  {
    id: 3,
    title: "KansoNote",
    description: "Productivity application focused on simplicity and efficiency. Combines sticky notes, task management, and Pomodoro timer integration for optimal workflow management.",
    type: "Productivity App",
    category: "Productivity Tool",
    technologies: ["React Native", "TypeScript", "SQLite", "Node.js", "Firebase"],
    features: ["Sticky Notes", "Task Management", "Pomodoro Timer", "Cloud Sync", "Cross-platform Support"],
    targetAudience: "Individual users focused on productivity and task organization",
    image: "https://images.pexels.com/photos/196644/pexels-photo-196644.jpeg?auto=compress&cs=tinysrgb&w=800",
    status: "Live"
  },
  {
    id: 4,
    title: "WorkSpace",
    description: "Advanced collaboration platform featuring real-time chat, workspace management, topic-based discussions, and integrated task management for modern teams.",
    type: "Collaboration Tool",
    category: "Team Collaboration",
    technologies: ["Next.js", "TypeScript", "Prisma", "WebRTC", "Supabase", "Tailwind CSS"],
    features: ["Real-time Chat", "Workspace Creation", "Topic Discussions", "Task Management", "File Sharing", "Video Calls"],
    targetAudience: "Teams and organizations requiring collaborative work environments",
    image: "https://images.pexels.com/photos/7688336/pexels-photo-7688336.jpeg?auto=compress&cs=tinysrgb&w=800",
    status: "In Development"
  }
];

const categories = ["All Projects", "Platform", "Enterprise Software", "Productivity Tool", "Team Collaboration"];
---

<Layout 
  title="Our Projects - KruxxTech" 
  description="Explore KruxxTech's portfolio of innovative software solutions including platforms, ERP systems, and productivity tools."
>
  <Header />
  <main class="pt-20">
    <!-- Hero Section -->
    <section class="py-20 bg-gradient-to-br from-primary-50 via-cyan-50 to-secondary-50 relative overflow-hidden">
      <!-- 3D Background Elements -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-10 left-10 w-72 h-72 bg-gradient-to-br from-primary-200/20 to-blue-200/20 rounded-full blur-3xl animate-pulse-slow" style="animation-duration: 15s;"></div>
        <div class="absolute bottom-10 right-10 w-88 h-88 bg-gradient-to-br from-secondary-200/15 to-teal-200/15 rounded-full blur-3xl animate-float" style="animation-duration: 18s;"></div>
        <div class="absolute top-1/2 left-1/2 w-64 h-64 bg-gradient-to-br from-purple-200/12 to-pink-200/12 rounded-full blur-3xl animate-bounce-slow transform -translate-x-1/2 -translate-y-1/2" style="animation-duration: 22s;"></div>
        
        <!-- Floating 3D Shapes -->
        <div class="absolute top-1/4 right-1/3 w-20 h-20 bg-gradient-to-br from-accent-300/30 to-yellow-300/30 rounded-3xl animate-float transform rotate-45 shadow-xl shadow-accent-500/25" style="animation-delay: 1s; animation-duration: 10s;"></div>
        <div class="absolute bottom-1/4 left-1/3 w-16 h-16 bg-gradient-to-br from-green-300/35 to-emerald-300/35 rounded-2xl animate-bounce-slow transform -rotate-30 shadow-lg shadow-green-500/25" style="animation-delay: 3s;"></div>
        <div class="absolute top-2/3 right-1/4 w-12 h-12 bg-gradient-to-br from-rose-300/40 to-pink-300/40 rounded-full animate-pulse-slow shadow-lg shadow-rose-500/30" style="animation-delay: 5s;"></div>
        <div class="absolute top-1/3 left-1/4 w-8 h-8 bg-gradient-to-br from-indigo-300/45 to-purple-300/45 rounded-lg animate-float transform rotate-12 shadow-md shadow-indigo-500/25" style="animation-delay: 7s; animation-duration: 14s;"></div>
      </div>
      
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16 animate-on-scroll">
          <h1 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6">
            Our Project Portfolio
          </h1>
          <p class="text-xl text-slate-600 max-w-3xl mx-auto">
            Discover the innovative solutions we've created across various industries and technologies. 
            Each project represents our commitment to excellence and user-centered design.
          </p>
        </div>
      </div>
    </section>
    
    <!-- Filter Section -->
    <section class="py-8 bg-gradient-to-r from-white via-blue-50 to-purple-50 border-b border-slate-200 relative overflow-hidden">
      <!-- Subtle 3D Background -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-0 left-1/4 w-32 h-32 bg-gradient-to-br from-primary-200/10 to-secondary-200/10 rounded-full blur-2xl animate-pulse-slow" style="animation-duration: 12s;"></div>
        <div class="absolute bottom-0 right-1/4 w-40 h-40 bg-gradient-to-br from-purple-200/8 to-pink-200/8 rounded-full blur-2xl animate-float" style="animation-duration: 16s;"></div>
        
        <!-- Small floating elements -->
        <div class="absolute top-1/2 left-1/3 w-6 h-6 bg-gradient-to-br from-cyan-300/30 to-blue-300/30 rounded-full animate-float shadow-sm shadow-cyan-500/20" style="animation-delay: 2s; animation-duration: 8s;"></div>
        <div class="absolute top-1/2 right-1/3 w-4 h-4 bg-gradient-to-br from-yellow-300/35 to-orange-300/35 rounded-full animate-bounce-slow shadow-sm shadow-yellow-500/20" style="animation-delay: 4s;"></div>
      </div>
      
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-wrap items-center gap-4">
          <div class="flex items-center text-slate-600">
            <Filter className="h-5 w-5 mr-2" />
            <span class="font-medium">Filter by:</span>
          </div>
          <div class="flex flex-wrap gap-2">
            {categories.map((category) => (
              <button 
                class="px-4 py-2 bg-slate-100 hover:bg-primary-100 text-slate-700 hover:text-primary-700 rounded-lg transition-all duration-200 text-sm font-medium filter-btn"
                data-category={category}
              >
                {category}
              </button>
            ))}
          </div>
        </div>
      </div>
    </section>
    
    <!-- Projects Grid -->
    <section class="py-20 bg-gradient-to-br from-white via-slate-50 to-blue-50 relative overflow-hidden">
      <!-- 3D Background Elements -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-20 right-20 w-96 h-96 bg-gradient-to-br from-primary-200/10 to-cyan-200/10 rounded-full blur-3xl animate-float" style="animation-duration: 20s;"></div>
        <div class="absolute bottom-20 left-20 w-80 h-80 bg-gradient-to-br from-purple-200/12 to-pink-200/12 rounded-full blur-3xl animate-pulse-slow" style="animation-duration: 24s;"></div>
        
        <!-- Scattered floating elements -->
        <div class="absolute top-1/3 left-1/4 w-24 h-24 bg-gradient-to-br from-green-300/20 to-teal-300/20 rounded-2xl animate-float transform rotate-30 shadow-xl shadow-green-500/15" style="animation-delay: 1s; animation-duration: 13s;"></div>
        <div class="absolute bottom-1/3 right-1/4 w-18 h-18 bg-gradient-to-br from-accent-300/25 to-yellow-300/25 rounded-3xl animate-bounce-slow transform -rotate-20 shadow-lg shadow-accent-500/20" style="animation-delay: 3s;"></div>
        <div class="absolute top-2/3 left-1/2 w-14 h-14 bg-gradient-to-br from-rose-300/30 to-pink-300/30 rounded-2xl animate-pulse-slow transform rotate-45 shadow-lg shadow-rose-500/20" style="animation-delay: 5s;"></div>
      </div>
      
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12" id="projects-grid">
          {projects.map((project) => (
            <div class="project-card group bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 border border-slate-100 overflow-hidden animate-on-scroll" data-category={project.category}>
              <div class="relative overflow-hidden">
                <img 
                  src={project.image} 
                  alt={project.title}
                  class="w-full h-64 object-cover group-hover:scale-125 group-hover:rotate-2 transition-transform duration-500"
                />
                <div class="absolute top-4 left-4 transform group-hover:scale-110 group-hover:-rotate-6 transition-all duration-300">
                  <span class="px-3 py-1 bg-primary-500 text-white text-sm rounded-full">
                    {project.type}
                  </span>
                </div>
                <div class="absolute top-4 right-4 transform group-hover:scale-110 group-hover:rotate-6 transition-all duration-300">
                  <span class={`px-3 py-1 text-sm rounded-full ${
                    project.status === 'Live' 
                      ? 'bg-green-500 text-white' 
                      : 'bg-yellow-500 text-white'
                  }`}>
                    {project.status}
                  </span>
                </div>
                <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
              </div>
              
              <div class="p-8 relative">
                <h3 class="text-2xl font-bold text-slate-900 mb-4 group-hover:text-primary-600 transition-colors">
                  {project.title}
                </h3>
                
                <p class="text-slate-600 mb-6 leading-relaxed">
                  {project.description}
                </p>
                
                <div class="mb-6">
                  <h4 class="text-sm font-semibold text-slate-900 mb-3">Key Features:</h4>
                  <div class="grid grid-cols-2 gap-2">
                    {project.features.map((feature) => (
                      <div class="flex items-center text-sm text-slate-600">
                        <div class="w-2 h-2 bg-secondary-500 rounded-full mr-2"></div>
                        {feature}
                      </div>
                    ))}
                  </div>
                </div>
                
                <div class="mb-6">
                  <h4 class="text-sm font-semibold text-slate-900 mb-3">Technologies:</h4>
                  <div class="flex flex-wrap gap-2">
                    {project.technologies.map((tech) => (
                      <span class="px-3 py-1 bg-slate-100 text-slate-700 text-xs rounded-lg">
                        {tech}
                      </span>
                    ))}
                  </div>
                </div>
                
                <div class="mb-6">
                  <h4 class="text-sm font-semibold text-slate-900 mb-2">Target Audience:</h4>
                  <p class="text-sm text-slate-600">{project.targetAudience}</p>
                </div>
                
                <div class="flex items-center space-x-4">
                  <button class="flex items-center text-primary-600 font-medium hover:text-primary-700 transition-colors">
                    Learn More
                    <ArrowRight className="ml-2 h-4 w-4 group-hover:translate-x-2 group-hover:scale-110 transition-transform duration-300" />
                  </button>
                  {project.status === 'Live' && (
                    <button class="flex items-center text-secondary-600 font-medium hover:text-secondary-700 transition-colors">
                      <ExternalLink className="h-4 w-4 mr-2" />
                      View Live
                    </button>
                  )}
                </div>
                <div class="absolute inset-0 bg-gradient-to-br from-primary-500/5 to-transparent rounded-b-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-br from-primary-600 via-purple-600 to-secondary-600 relative overflow-hidden">
      <!-- 3D Background Elements -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-0 left-0 w-80 h-80 bg-gradient-to-br from-white/8 to-cyan-300/15 rounded-full blur-3xl animate-float" style="animation-duration: 16s;"></div>
        <div class="absolute bottom-0 right-0 w-96 h-96 bg-gradient-to-br from-accent-300/12 to-pink-300/12 rounded-full blur-3xl animate-pulse-slow" style="animation-duration: 20s;"></div>
        
        <!-- Floating Elements -->
        <div class="absolute top-1/4 right-1/4 w-28 h-28 bg-gradient-to-br from-white/15 to-cyan-200/25 rounded-3xl animate-float transform rotate-15 shadow-2xl shadow-cyan-500/30" style="animation-delay: 2s; animation-duration: 12s;"></div>
        <div class="absolute bottom-1/4 left-1/4 w-20 h-20 bg-gradient-to-br from-yellow-200/20 to-orange-200/20 rounded-2xl animate-bounce-slow transform -rotate-25 shadow-xl shadow-orange-500/25" style="animation-delay: 4s;"></div>
        <div class="absolute top-1/2 left-1/2 w-12 h-12 bg-gradient-to-br from-pink-200/35 to-purple-200/35 rounded-full animate-pulse-slow transform rotate-60 shadow-lg shadow-pink-500/30" style="animation-delay: 6s;"></div>
      </div>
      
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="animate-on-scroll">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
            Ready to Start Your Next Project?
          </h2>
          <p class="text-xl text-white/90 mb-8 max-w-3xl mx-auto">
            Let's collaborate to bring your vision to life with innovative technology solutions 
            that drive real business results.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href="/contact" 
              class="inline-flex items-center px-8 py-4 bg-white text-primary-600 rounded-xl font-semibold hover:bg-slate-100 transition-all duration-200 hover:scale-105 hover:shadow-xl"
            >
              Get Started Today
              <ArrowRight className="ml-2 h-5 w-5" />
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<script>
  // Project filtering functionality
  const filterButtons = document.querySelectorAll('.filter-btn');
  const projectCards = document.querySelectorAll('.project-card');
  
  filterButtons.forEach(button => {
    button.addEventListener('click', () => {
      const category = button.getAttribute('data-category');
      
      // Update active button
      filterButtons.forEach(btn => {
        btn.classList.remove('bg-primary-500', 'text-white');
        btn.classList.add('bg-slate-100', 'text-slate-700');
      });
      button.classList.remove('bg-slate-100', 'text-slate-700');
      button.classList.add('bg-primary-500', 'text-white');
      
      // Filter projects
      projectCards.forEach(card => {
        const projectCategory = card.getAttribute('data-category');
        if (category === 'All Projects' || projectCategory === category) {
          (card as HTMLElement).style.display = 'block';
          card.classList.add('animate-fade-up');
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });
    });
  });
  
  // Set initial active state
  filterButtons[0].classList.remove('bg-slate-100', 'text-slate-700');
  filterButtons[0].classList.add('bg-primary-500', 'text-white');
</script>